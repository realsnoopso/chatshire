{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@src/*": ["./src/*"],
      "@styles/*": ["./src/styles/*"],
      "@components/*": ["./src/components/common/*"],
      "@common": ["./src/components/common/index.tsx"],
      "@pages": ["./src/components/pages/index.tsx"],
      "@layouts": ["./src/components/layouts/index.tsx"],
      "@services/*": ["./src/services/*"],
      "@assets/*": ["./src/assets/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@types": ["./src/types/index.tsx"],
      "@constants": ["./src/constants/index.ts"],
      "@apis/*": ["./src/apis/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/assets/index.js"],
  "exclude": ["node_modules"]
}
